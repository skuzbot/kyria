#include <behaviors.dtsi>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>

/ {
	keymap {
		compatible = "zmk,keymap";

		default_layer {
// ----------------------------------------------------------------------------------------------------------------------------------
// |  ESC  |  Q  |  W  |  E    |  R   |  T   |                                          |  Y   |  U    |  I    |  O   |   P   |   \  |
// |  TAB  |  A  |  S  |  D    |  F   |  G   |                                          |  H   |  J    |  K    |  L   |   ;   |   '  |
// | SHIFT |  Z  |  X  |  C    |  V   |  B   | GUI   | TODO |             | TODO | TODO |  N   |  M    |  ,    |  .   |   /   | SHFT |
//               | (E)     ALT | CTRL | TODO | GUI   | RET  |             | BKSP | SPC  | GUI  | GUI   | (E) TODO     |
			bindings = <
	&kp ESC   &kp Q &kp W &kp E &kp R &kp T                                                &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSLH
	&kp TAB   &kp A &kp S &kp D &kp F &kp G                                                &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
	&kp LSHFT &kp Z &kp X &kp C &kp V &kp B      &kp LGUI &none       &none &none          &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp RSHFT
	               &kp LALT &kp LCTRL &none    &kp LGUI &kp RET       &kp BSPC &kp SPACE   &kp LGUI &kp LALT &none
			>;

			sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp RIGHT LEFT>;
		};
	};
};
